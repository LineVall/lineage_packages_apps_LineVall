<PreferenceScreen
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:settings="http://schemas.android.com/apk/res-auto"
     xmlns:lineage="http://schemas.android.com/apk/res-auto"
     android:title="@string/linevall_misc_title" >

<PreferenceCategory
        android:title="@string/spoof" />
      
    <!-- Netflix Spoof -->
    <com.linevall.unsa.preferences.SystemPropertySwitchPreference
        android:key="persist.sys.pixelprops.netflix"
        android:title="@string/netflix_spoof_title"
        android:summary="@string/netflix_spoof_summary"
        android:defaultValue="false" />

    <!-- Unlimited google photos storage -->
    <com.linevall.unsa.preferences.SystemSettingSwitchPreference
        android:key="use_photos_spoof"
        android:title="@string/use_photos_spoof_title"
        android:summary="@string/use_photos_spoof_summary"
        android:defaultValue="true" />

    <!-- Unlock FPS for specific games -->
    <com.linevall.unsa.preferences.SystemSettingSwitchPreference
        android:key="use_games_spoof"
        android:title="@string/use_games_spoof_title"
        android:summary="@string/use_games_spoof_summary" />

<PreferenceCategory
        android:title="@string/anim" />

    <com.linevall.unsa.preferences.GlobalSettingSwitchPreference
        android:key="pie_animation_style"
        android:title="@string/pie_animation_style_title"
        android:summary="@string/pie_animation_style_summary"
        android:defaultValue="false" />

        <com.linevall.unsa.preferences.SystemSettingListPreference
            android:key="screen_off_animation"
            android:title="@string/screen_off_animation_title"
            android:entries="@array/screen_off_animation_entries"
            android:entryValues="@array/screen_off_animation_values"
            android:summary="%s"
            android:defaultValue="0" />

    <com.linevall.unsa.preferences.SystemSettingSwitchPreference
        android:key="charging_animation"
        android:title="@string/charging_animation_title"
        android:summary="@string/charging_animation_summary"
        android:defaultValue="true" />

    <!-- Squiggle animation -->
    <com.linevall.unsa.preferences.SecureSettingSwitchPreference
        android:key="hide_media_squiggle_animation"
        android:title="@string/hide_squiggle_animation_title"
        android:summary="@string/hide_squiggle_animation_summary"
        android:defaultValue="false" />

<PreferenceCategory
        android:title="@string/fingerprint" />

        <com.linevall.unsa.preferences.SystemSettingSwitchPreference
            android:key="enable_ripple_effect"
            android:title="@string/enable_fingerprint_ripple_effect_title"
            android:summary="@string/enable_fingerprint_ripple_effect_summary"
            android:defaultValue="true" />

        <com.linevall.unsa.preferences.SystemSettingSwitchPreference
            android:key="fp_success_vibrate"
            android:title="@string/fp_success_vibrate_title"
            android:summary="@string/fp_success_vibrate_summary"
            android:defaultValue="true" />

        <com.linevall.unsa.preferences.SystemSettingSwitchPreference
            android:key="fp_error_vibrate"
            android:title="@string/fp_error_vibrate_title"
            android:summary="@string/fp_error_vibrate_summary"
            android:defaultValue="true" />

<PreferenceCategory
        android:title="@string/lockscreen" />

        <com.linevall.unsa.preferences.SystemSettingSwitchPreference
        android:key="lockscreen_battery_info"
        android:title="@string/lockscreen_battery_info_title"
        android:summary="@string/lockscreen_battery_info_summary"
        android:defaultValue="true" />

        <com.linevall.unsa.preferences.SecureSettingSwitchPreference
            android:key="lockscreen_media_metadata"
            android:title="@string/lockscreen_media_art_title"
            android:summary="@string/lockscreen_media_art_summary"
            android:defaultValue="false" />

        <com.linevall.unsa.preferences.SystemSettingListPreference
            android:key="lockscreen_albumart_filter"
            android:dependency="lockscreen_media_metadata"
            android:title="@string/lockscreen_albumart_filter_title"
            android:entries="@array/lockscreen_albumart_filter_entries"
            android:entryValues="@array/lockscreen_albumart_filter_values"
            android:defaultValue="0" />

        <com.linevall.unsa.preferences.SystemSettingSeekBarPreference
            android:key="ls_media_artwork_fade_percent"
            android:title="@string/ls_media_artwork_fade_percent_title"
            android:dependency="lockscreen_media_metadata"
            android:defaultValue="30"
            android:max="80"
            settings:min="1" />

        <com.linevall.unsa.preferences.GlobalSettingSwitchPreference
            android:key="wake_when_plugged_or_unplugged"
            android:title="@string/wake_when_plugged_or_unplugged_title"
            android:summary="@string/wake_when_plugged_or_unplugged_summary"
            settings:requiresConfig="@*com.android.settings:bool/config_show_top_level_battery" 
            android:defaultValue="@*android:bool/config_unplugTurnsOnScreen" />

    <com.linevall.unsa.preferences.SystemSettingSwitchPreference
        android:key="doze_on_charge"
        android:defaultValue="false"
        android:title="@string/doze_on_charge_title"
        android:summary="@string/doze_on_charge_summary" />

       <com.linevall.unsa.preferences.SystemSettingSwitchPreference
            android:key="ambient_icons_lockscreen"
            android:title="@string/ambient_icons_lockscreen_title"
            android:summary="@string/ambient_icons_lockscreen_summary"
            android:defaultValue="false" />

        <com.linevall.unsa.preferences.SystemSettingSeekBarPreference
            android:key="ambient_icons_size"
            android:title="@string/ambient_icons_size_title"
            android:dependency="ambient_icons_lockscreen"
            android:max="100"
            settings:min="0"
            settings:units="dp"
            settings:interval="1"
            android:defaultValue="80" />

        <com.linevall.unsa.preferences.colorpicker.SystemSettingColorPickerPreference
            android:key="ambient_icons_color"
            android:title="@string/ambient_icons_color_title"
            android:dependency="ambient_icons_lockscreen"
            android:defaultValue="0xFFFFFFFF" />

    <Preference
        android:key="edge_light_settings"
        android:title="@string/edge_light_title"
        android:summary="@string/edge_light_summary"
        android:fragment="com.linevall.unsa.fragment.doze.EdgeLightSettings" />

<PreferenceCategory
        android:title="@string/addon" />

    <!-- Screenshot Sound  -->
    <com.linevall.unsa.preferences.SystemSettingSwitchPreference
        android:key="screenshot_shutter_sound"
        android:title="@string/screenshot_shutter_sound_title"
        android:summary="@string/screenshot_shutter_sound_summary"
        android:defaultValue="true" />

    <!-- Gaming mode -->
    <Preference
        android:key="gaming_mode"
        android:title="@string/gaming_mode_title"
        android:summary="@string/gaming_mode_summary">

        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="io.chaldeaprjkt.gamespace"
            android:targetClass="io.chaldeaprjkt.gamespace.settings.SettingsActivity" />
    </Preference>

     <com.linevall.unsa.preferences.SecureSettingSwitchPreference
         android:key="window_ignore_secure"
         android:title="@string/ignore_window_secure_title"
         android:summary="@string/ignore_window_secure_summary"
         android:defaultValue="false"/>

</PreferenceScreen>
