<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    xmlns:lineage="http://schemas.android.com/apk/res-auto"
    android:title="@string/customize_dashboard_title" >

        <!-- Status Bar -->
        <lineageos.preference.RemotePreference
          android:id="@+id/statbar"
          android:key="status_bar_settings"
          android:title="@string/linevall_statusbar_title"
          android:layout="@layout/preference_category_statusbar">
            <intent android:action="org.lineageos.lineageparts.STATUS_BAR_SETTINGS" />
        </lineageos.preference.RemotePreference>

        <!-- Button -->
        <lineageos.preference.RemotePreference
          android:id="@+id/button"
          android:key="button_settings"
          android:title="@string/button"
          android:layout="@layout/preference_category_qs">
            <intent android:action="org.lineageos.lineageparts.BUTTON_SETTINGS" />
        </lineageos.preference.RemotePreference>

     <!-- Notification -->
     <Preference
          android:id="@+id/notification"
          android:title="@string/linevall_notification"
          android:fragment="com.linevall.unsa.fragment.Notification"
          android:layout="@layout/preference_category_statusbar" />

     <!-- QS -->
     <Preference
          android:id="@+id/qs"
          android:title="@string/linevall_qs_title"
          android:fragment="com.linevall.unsa.fragment.Qs"
          android:layout="@layout/preference_category_qs"
          />

       <!-- Theme -->
   	<Preference
           android:id="@+id/theme"
           android:title="@string/linevall_theme_title"
           android:fragment="com.linevall.unsa.fragment.Theme"
           android:layout="@layout/preference_category_statusbar" />

       <!-- Misc -->
   	<Preference
           android:id="@+id/misc"
           android:title="@string/linevall_misc_title"
           android:fragment="com.linevall.unsa.fragment.Misc"
           android:layout="@layout/preference_category_qs" />

</PreferenceScreen>
